<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineNote">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="831dp"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/changelist"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top|right"
                    android:background="@null"
                    android:text="ToggleButton"
                    android:textColor="@color/blueColor"
                    android:textOff="時間ごと"
                    android:textOn="薬ごと" />

                <LinearLayout
                    android:id="@+id/list_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="朝"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />


                    </LinearLayout>

                    <ListView
                        android:id="@+id/morning"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView2"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="昼"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton2"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/noon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView3"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="夕"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton3"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/evening"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView4"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="寝る前"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton4"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/beforesleep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView5"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="朝食後"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton5"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/afterbreakfast"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView6"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="昼食後"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton6"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/afterlunch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/TimeView7"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="夕食後"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton7"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/afterdinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView8"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="朝昼食間"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton8"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/breakfast_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TextView9"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="昼夕食間"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton9"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/lunch_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeView10"
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:gravity="top|bottom"
                            android:text="適宜"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:layout_weight="4"/>

                        <ToggleButton
                            android:id="@+id/visiblebutton10"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textOff="表示"
                            android:textOn="非表示" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/everytime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </LinearLayout>

                <ListView
                    android:id="@+id/medicinelist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!--<ScrollView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <!--</ScrollView>-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/content_medicine_note" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</android.support.design.widget.CoordinatorLayout>